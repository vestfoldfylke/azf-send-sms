{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sms.schema.json",
  "type": "object",
  "title": "SMS schema",
  "required": [
    "receivers",
    "message"
  ],
  "properties": {
    "receivers": {
      "$id": "#/properties/receivers",
      "type": "array",
      "title": "SMS receivers",
      "default": null,
      "minItems": 1,
      "items": {
        "$id": "#/properties/receivers/items",
        "type": "string",
        "title": "Mobile number",
        "default": "",
        "examples": [
          "4798765432"
        ],
        "pattern": "^\\d{10}$",
        "format": "regex"
      }
    },
    "message": {
      "$id": "#/properties/message",
      "type": "string",
      "title": "SMS message",
      "examples": [
        "Hello World!"
      ],
      "minLength": 1
    },
    "sender": {
      "$id": "#/properties/sender",
      "type": "string",
      "title": "Sender name",
      "default": "",
      "examples": [
        "VFK"
      ],
      "pattern": "^(.*)$"
    },
    "operation": {
      "$id": "#/properties/operation",
      "type": "integer",
      "title": "PSWinCom operation",
      "examples": [
        9
      ]
    }
  }
}